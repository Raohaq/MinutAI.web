@page
@model MinutAI.web.Pages.Meetings.ResultModel
@{
    ViewData["Title"] = "Meeting Results";
}

<h2>Meeting Results</h2>

<div class="mb-3">
    <a class="btn btn-secondary btn-sm" asp-page="/Meetings/History">History</a>
    <a class="btn btn-success btn-sm"
       asp-page="/Meetings/Result"
       asp-route-id="@Model.Meeting?.Id"
       asp-page-handler="DownloadAll">
        Download All (ZIP)
    </a>
        <a class="btn btn-primary btn-sm" asp-page="/Index">Process Another Meeting</a>
</div>

<hr />

<h3>Transcript</h3>
<div class="mb-2">
    <a class="btn btn-outline-dark btn-sm"
       asp-page="/Meetings/Result"
       asp-route-id="@Model.Meeting?.Id"
       asp-page-handler="Download"
       asp-route-type="transcript">
        Download Transcript
    </a>
</div>
<textarea rows="12" style="width:100%;" readonly>@Model.Meeting?.Transcript</textarea>

<hr />

<h3>Summary</h3>
<div class="mb-2">
    <a class="btn btn-outline-dark btn-sm"
       asp-page="/Meetings/Result"
       asp-route-id="@Model.Meeting?.Id"
       asp-page-handler="Download"
       asp-route-type="summary">
        Download Summary
    </a>
</div>
<textarea rows="8" style="width:100%;" readonly>@Model.Meeting?.Summary</textarea>

<hr />

<h3>Action Items</h3>
<div class="mb-2">
    <a class="btn btn-outline-dark btn-sm"
       asp-page="/Meetings/Result"
       asp-route-id="@Model.Meeting?.Id"
       asp-page-handler="Download"
       asp-route-type="actions">
        Download Action Items
    </a>
</div>
<textarea rows="8" style="width:100%;" readonly>@Model.Meeting?.ActionItems</textarea>