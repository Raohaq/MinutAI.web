@page
@model MinutAI.web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Create Account</h1>

<form method="post">
    <div>
        <label>Full Name</label><br />
        <input asp-for="FullName" />
        <span style="color:red" asp-validation-for="FullName"></span>
    </div>

    <br />

    <div>
        <label>Email</label><br />
        <input asp-for="Email" />
        <span style="color:red" asp-validation-for="Email"></span>
    </div>

    <br />

    <div>
        <label>Password</label><br />
        <input asp-for="Password" type="password" />
        <span style="color:red" asp-validation-for="Password"></span>
    </div>

    <br />

    <div>
        <label>Confirm Password</label><br />
        <input asp-for="ConfirmPassword" type="password" />
        <span style="color:red" asp-validation-for="ConfirmPassword"></span>
    </div>

    <br />

    <button type="submit">Register</button>
</form>

@if (Model.ErrorMessage != null)
{
<p style="color:red"><b>@Model.ErrorMessage</b></p>
}

<p>Already have an account? <a asp-page="/Account/Login">Login</a></p>